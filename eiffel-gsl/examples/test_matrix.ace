system  test_matrix

root TEST_MATRIX : make

default -- section of the system

	assertion (all);
	debug (yes);
	trace (no);
	collect (yes); -- garbage collector ?
	no_style_warning (no);
	no_warning (no);
	verbose (no);
	manifest_string_trace (no);
	high_memory_compiler (no);	

cluster -- section
		"../../common"
		"../library/externals"
		"../library/plugins"
		"../library"
		"."
	standard: "${path_lib}/loadpath.se"


external -- section for elements written in another language

	-- Can be done with those
	-- external_header_path: "/usr/include /usr/include/gsl"
	-- external_c_files: "gsl_vector.c"
	-- Or dynamically and more right with:

generate -- section
	c_compiler_options : "$(pkg-config --cflags gsl)"
	linker_options : "$(pkg-config --libs gsl)"
end

